// Get the modal
var modal = document.getElementById("otp-container");

// Get the <span> element that closes the modal
var closeBtn = document.getElementsByClassName("close")[0];

// Get the input field and error message element
var otpInput = document.getElementById("otp-container");
var errorMessage = document.getElementById("otp-error-message");

// Get the submit button and resend link
var submitBtn = document.getElementById("mainSubmit");
var resendLink = document.getElementById("mainSubmit2");

// Open the modal
modal.style.display = "block";

// When the user clicks on <span> (x), close the modal
closeBtn.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

// When the user submits the OTP form
submitBtn.onclick = function(event) {
  event.preventDefault(); // Prevent form submission

}
